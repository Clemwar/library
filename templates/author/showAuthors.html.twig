{% extends('books.base.html.twig') %}

{% block title %}
   Les auteurs
{% endblock %}

{% block main %}
    <section class="books">
        {% for author in authors %}
            <a href="{{ path('author', {'id':author.id}) }}" class="lienShow">
                <article class="liste">
                    <header>
                    <h2> {{ author.firstName }} {{ author.name }}</h2>
                    <p>En savoir plus</p>
                    </header>
                </article>
            </a>
        {% endfor %}
    </section>
{% endblock %}
